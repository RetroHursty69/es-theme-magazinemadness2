         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view>     
   
<!--
System Gamelist
--> 

   <view name="basic,detailed,video">
      <textlist name="gamelist">
         <zIndex>49</zIndex>	      
         <selectorColor>afb0b6</selectorColor> 
	     <selectedColor>000000</selectedColor>     
         <pos>0.75 0.154</pos>
         <size>0.185 0.56</size>
         <primaryColor>000000</primaryColor>
         <secondaryColor>000000</secondaryColor>
         <fontPath>./_inc/fonts/GARABD.TTF</fontPath>
